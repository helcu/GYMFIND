                                        @*<input type="text" name="form-first-name" placeholder="Nombre" class="form-first-name form-control" id="form-first-name">*@
                                        @Html.EditorFor(x => x.usuario, new { htmlAttributes = new { @type = "text", @placeholder = "Nombre", @class = "form-first-name form-control", @name = "form-first-name", @id = "form-first-name" } })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-last-name">Apellido</label>
                                        @Html.EditorFor(x => x.clave, new { htmlAttributes = new { @type = "password", @placeholder = "Clave", @class = "form-password-name form-control", @name = "form-first-name", @id = "form-first-name" } })
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-email">Email</label>

                                        @Html.EditorFor(x => x.correo, new { htmlAttributes = new { @type = "text", @placeholder = "Correo", @class = "form-email form-control", @name = "form-email", @id = "form-email" } })
                                    </div>

                                    <button type="submit" class="btn">Registrame</button>
                                    @*}*@
                                </form>
                                    @*<form role="form" action="" method="post" class="registration-form">
                <div class="form-group">
                    <label class="sr-only" for="form-first-name">Nombre</label>
                    <input type="text" name="form-first-name" placeholder="Nombre" class="form-first-name form-control" id="form-first-name">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="form-last-name">Apellido</label>
                    <input type="text" name="form-last-name" placeholder="Apellido" class="form-last-name form-control" id="form-last-name">
                </div>
                <div class="form-group">
