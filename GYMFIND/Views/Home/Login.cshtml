<body>
    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">


                <div class="row">
                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Login</h3>
                                    <p>Ingrese usuario y contraseña:</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                @*<form role="form" action="" method="post" class="login-form">*@
                                    <form role="form" method="post" action="@Url.Action("login")">
                                        <div class="form-group">
                                            <label class="sr-only" for="form-username">Usuario o correo</label>
                                            @*<input type="text" name="form-username" placeholder="Usuario o correo" class="form-username form-control" id="form-username">*@
                                            @Html.EditorFor(x => x.usuario, new { htmlAttributes = new {@type="text", @placeholder = "Usuario", @class = "form-username form-control", @name = "form-username", @id = "form-username" } })
                                        </div>
                                        <div class="form-group">
                                            <label class="sr-only" for="form-password">Contraseña</label>
                                            @*<input type="password" name="form-password" placeholder="Contraseña" class="form-password form-control" id="form-password">*@
                                            @Html.EditorFor(x => x.clave, new { htmlAttributes = new { @type = "password", @placeholder = "contraseña", @class = "form-password form-control", @name = "form-password", @id = "form-password" } })
                                        </div>
                                        <button type="submit" class="btn">Login</button>
                                    </form>
                            </div>
                        </div>

                        <div class="social-login">
                            <h3>o</h3>
                            <div class="social-login-buttons">
                                <a class="btn btn-link-1 btn-link-1-facebook" href="#">
                                    <i class="fa fa-facebook"></i> Facebook
                                </a>
                                <a class="btn btn-link-1 btn-link-1-google-plus" href="#">
                                    <i class="fa fa-google-plus"></i> Google Plus
                                </a>
                            </div>
                        </div>

                    </div>

                    <div class="col-sm-1 middle-border"></div>
                    <div class="col-sm-1"></div>

                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Registrarse</h3>
                                    <p>Ingrese sus datos</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-pencil"></i>
                                </div>
                            </div>
                            <div class="form-bottom">

                                @*@using (Html.BeginForm("registrarUsuario", "HomeController", FormMethod.Post ))
